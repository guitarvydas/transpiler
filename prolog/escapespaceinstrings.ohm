Escapes {
  text = char+
  char =
    | dq (~dq stringchar)* dq -- string
    | ";" (~nl stringchar)* nl -- comment
    | any -- any

  stringchar =
    | " " -- space
    | nl -- newline
    | "\t" -- tab
    | ">" -- gt
    | "<" -- lt
    | dq -- quote
    | "'" -- squote
    | "&" -- amp
    | any -- any

  dq = "\""
  nl = "\n"
}
