JSMacro {
  stuff = item+
  item =
    | applySyntactic<Macro>
    | any

  Macro =
    | "mutate" vcomma "(" Sym argComma Expr argComma ")" ";" -- assign
    | "mutate" vcomma "(" Actual argComma Actual argComma ")" ";" -- assign

  Actual =
    | "(" char+ ")" -- rec
    | actualChar+ -- bottom

  actualChar = ~argComma ~"(" ~")" any
  argComma = "†"
  vcomma = "ₓ"
}
